@model IEnumerable<ProductCatalog.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="dark-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <div>
                <h1>
                    <i class="bi bi-shop-window"></i> Product Catalog
                </h1>
                <p class="text-white-50 mb-0 mt-2">Discover our amazing collection</p>
            </div>
            <a asp-action="Create" class="btn btn-gradient-primary">
                <i class="bi bi-plus-circle me-2"></i>Add New Product
            </a>
        </div>
    </div>

    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Counter -->
    @if (Model.Any())
    {
        <div class="stats-counter text-center">
            <h3>@Model.Count()</h3>
            <p><i class="bi bi-box-seam"></i> Products Available</p>
        </div>
    }

    <!-- Search Bar -->
    <form asp-action="Index" method="get" class="mb-4">
        <div class="input-group search-box">
            <span class="input-group-text bg-transparent border-0">
                <i class="bi bi-search text-white"></i>
            </span>
            <input type="text"
                   class="form-control"
                   name="searchTerm"
                   placeholder="Search products by name or category..."
                   value="@ViewBag.SearchTerm">
            <button class="btn btn-search" type="submit">
                <i class="bi bi-search me-2"></i>Search
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
            {
                <a asp-action="Index" class="btn btn-search">
                    <i class="bi bi-x-circle me-2"></i>Clear
                </a>
            }
        </div>
    </form>

    <!-- Products Grid -->
    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card product-card">
                        <div class="card-img-overlay">
                            @if (!string.IsNullOrEmpty(product.ImagePath))
                            {
                                <img src="@product.ImagePath" class="card-img-top" alt="@product.Name">
                            }
                            else
                            {
                                <div class="image-placeholder">
                                    <i class="bi bi-image" style="font-size: 4rem; color: rgba(255, 255, 255, 0.5);"></i>
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="category-badge">
                                    <i class="bi bi-tag-fill me-1"></i>@product.Category
                                </span>
                                <h4 class="price-tag mb-0">
                                    $@product.Price.ToString("N2")
                                </h4>
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@product.Id"
                                   class="btn btn-sm btn-outline-info action-btn">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@product.Id"
                                   class="btn btn-sm btn-outline-warning action-btn">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@product.Id"
                                   class="btn btn-sm btn-outline-danger action-btn">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
            <h4 class="mt-3">
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <text>No products found matching "@ViewBag.SearchTerm"</text>
                }
                else
                {
                    <text>No products available yet</text>
                }
            </h4>
            <p class="mb-0">Click "Add New Product" to create your first product!</p>
        </div>
    }
</div>

<script>
    // Add smooth scroll behavior
    document.documentElement.style.scrollBehavior = 'smooth';

    // Add hover sound effect (optional)
    document.querySelectorAll('.product-card').forEach(card => {
        card.addEventListener('mouseenter', function () {
            this.style.transform = 'translateY(-10px) scale(1.02)';
        });

    card.addEventListener('mouseleave', function() {
        this.style.transform = 'translateY(0) scale(1)';
        });
    });
</script>