@model ProductCatalog.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-info-circle"></i> Product Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Image Column -->
                        <div class="col-md-5">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" alt="@Model.Name"
                                     class="img-fluid rounded shadow-sm" />
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                     style="height: 400px;">
                                    <i class="bi bi-image" style="font-size: 6rem; color: #ccc;"></i>
                                </div>
                            }
                        </div>

                        <!-- Details Column -->
                        <div class="col-md-7">
                            <h3 class="mb-3">@Model.Name</h3>

                            <div class="mb-3">
                                <span class="badge bg-secondary fs-6">@Model.Category</span>
                            </div>

                            <div class="mb-3">
                                <h4 class="text-primary">$@Model.Price.ToString("N2")</h4>
                            </div>

                            <div class="mb-4">
                                <h5>Description:</h5>
                                <p class="text-muted">@Model.Description</p>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i>
                                    Created: @Model.CreatedDate.ToString("MMMM dd, yyyy")
                                </small>
                            </div>

                            <hr />

                            <div class="d-grid gap-2 d-md-flex">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                                <a asp-action="Index" class="btn btn-secondary ms-auto">
                                    <i class="bi bi-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>